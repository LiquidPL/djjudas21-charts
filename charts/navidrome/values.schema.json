{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "env": {
      "description": "environment variables. See [navidrome docs](https://www.navidrome.org/docs/usage/configuration-options/#environment-variables) for more details.",
      "properties": {
        "ND_ENABLESHARING": {
          "default": "false",
          "description": "Enable sharing",
          "required": [],
          "title": "ND_ENABLESHARING",
          "type": "string"
        },
        "ND_ENABLETRANSCODINGCONFIG": {
          "default": "true",
          "description": "Enables transcoding configuration in the UI",
          "required": [],
          "title": "ND_ENABLETRANSCODINGCONFIG",
          "type": "string"
        },
        "ND_LOGLEVEL": {
          "default": "info",
          "description": "Log level. Useful for troubleshooting",
          "required": [],
          "title": "ND_LOGLEVEL",
          "type": "string"
        },
        "ND_MUSICFOLDER": {
          "default": "/music",
          "description": "Folder where your music library is stored",
          "required": [],
          "title": "ND_MUSICFOLDER",
          "type": "string"
        },
        "ND_PROMETHEUS_ENABLED": {
          "default": "false",
          "description": "Enable extra endpoint with Prometheus metrics",
          "required": [],
          "title": "ND_PROMETHEUS_ENABLED",
          "type": "string"
        },
        "ND_SESSIONTIMEOUT": {
          "default": "24h",
          "description": "How long Navidrome will wait before closing web ui idle sessions",
          "required": [],
          "title": "ND_SESSIONTIMEOUT",
          "type": "string"
        },
        "TZ": {
          "default": "UTC",
          "description": "Set the container timezone",
          "required": [],
          "title": "TZ",
          "type": "string"
        }
      },
      "required": [],
      "title": "env",
      "type": "object"
    },
    "global": {
      "description": "Global values are values that can be accessed from any chart or subchart by exactly the same name.",
      "required": [],
      "title": "global",
      "type": "object"
    },
    "image": {
      "properties": {
        "pullPolicy": {
          "default": "IfNotPresent",
          "description": "image pull policy",
          "required": [],
          "title": "pullPolicy",
          "type": "string"
        },
        "repository": {
          "default": "deluan/navidrome",
          "description": "image repository",
          "required": [],
          "title": "repository",
          "type": "string"
        },
        "tag": {
          "default": "",
          "description": "image tag",
          "required": [],
          "title": "tag",
          "type": "null"
        }
      },
      "required": [],
      "title": "image",
      "type": "object"
    },
    "ingress": {
      "properties": {
        "main": {
          "description": "Enable and configure ingress settings for the chart under this key.",
          "properties": {
            "annotations": {
              "properties": {
                "nginx.ingress.kubernetes.io/configuration-snippet": {
                  "default": "location /metrics {\n  deny all;\n  return 403;\n}\n",
                  "required": [],
                  "title": "nginx.ingress.kubernetes.io/configuration-snippet",
                  "type": "string"
                }
              },
              "required": [],
              "title": "annotations",
              "type": "object"
            },
            "enabled": {
              "default": false,
              "required": [],
              "title": "enabled",
              "type": "boolean"
            }
          },
          "required": [],
          "title": "main",
          "type": "object"
        }
      },
      "required": [],
      "title": "ingress",
      "type": "object"
    },
    "persistence": {
      "description": "Configure persistence settings for the chart under this key.",
      "properties": {
        "config": {
          "properties": {
            "enabled": {
              "default": false,
              "required": [],
              "title": "enabled",
              "type": "boolean"
            },
            "mountPath": {
              "default": "/data",
              "required": [],
              "title": "mountPath",
              "type": "string"
            }
          },
          "required": [],
          "title": "config",
          "type": "object"
        },
        "music": {
          "properties": {
            "enabled": {
              "default": false,
              "required": [],
              "title": "enabled",
              "type": "boolean"
            },
            "mountPath": {
              "default": "/music",
              "required": [],
              "title": "mountPath",
              "type": "string"
            }
          },
          "required": [],
          "title": "music",
          "type": "object"
        }
      },
      "required": [],
      "title": "persistence",
      "type": "object"
    },
    "service": {
      "description": "Configures service settings for the chart.",
      "properties": {
        "main": {
          "properties": {
            "monitor": {
              "properties": {
                "enabled": {
                  "default": false,
                  "description": "Enables or disables the serviceMonitor.",
                  "required": [],
                  "title": "enabled",
                  "type": "boolean"
                },
                "endpoints": {
                  "description": "Configures the endpoints for the serviceMonitor.",
                  "items": {
                    "anyOf": [
                      {
                        "properties": {
                          "interval": {
                            "default": "1m",
                            "required": [],
                            "title": "interval",
                            "type": "string"
                          },
                          "path": {
                            "default": "/metrics",
                            "required": [],
                            "title": "path",
                            "type": "string"
                          },
                          "port": {
                            "default": "http",
                            "required": [],
                            "title": "port",
                            "type": "string"
                          },
                          "scheme": {
                            "default": "http",
                            "required": [],
                            "title": "scheme",
                            "type": "string"
                          },
                          "scrapeTimeout": {
                            "default": "10s",
                            "required": [],
                            "title": "scrapeTimeout",
                            "type": "string"
                          }
                        },
                        "required": [],
                        "type": "object"
                      }
                    ],
                    "required": []
                  },
                  "required": [],
                  "title": "endpoints",
                  "type": "array"
                }
              },
              "required": [],
              "title": "monitor",
              "type": "object"
            },
            "ports": {
              "properties": {
                "http": {
                  "properties": {
                    "port": {
                      "default": 4533,
                      "required": [],
                      "title": "port",
                      "type": "integer"
                    }
                  },
                  "required": [],
                  "title": "http",
                  "type": "object"
                }
              },
              "required": [],
              "title": "ports",
              "type": "object"
            }
          },
          "required": [],
          "title": "main",
          "type": "object"
        }
      },
      "required": [],
      "title": "service",
      "type": "object"
    }
  },
  "required": [],
  "type": "object"
}